<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".Client.ui.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Craft Corner"
            android:textSize="50dp"
            android:textColor="@color/purple_500"
            android:gravity="center"
            android:fontFamily="@font/bauhaus"/>


    <com.google.android.material.card.MaterialCardView
        android:elevation="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/slider_carousel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:sliderAnimationDuration="600"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="@color/purple_500"
            app:sliderIndicatorUnselectedColor="@color/white"
            app:sliderScrollTimeInSec="3"
            app:sliderStartAutoCycle="true"/>

    </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Our Categories"
            android:textSize="30dp"
            android:textColor="@color/purple_500"
            android:gravity="center"
            android:fontFamily="@font/bauhaus"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:id="@+id/men"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/man"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Men Wear"
                    android:textSize="10dp"
                    android:fontFamily="@font/bauhaus"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/women"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/man"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Momen Wear"
                    android:textSize="10dp"
                    android:fontFamily="@font/bauhaus"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/kurta"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/man"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Kurta"
                    android:textSize="10dp"
                    android:fontFamily="@font/bauhaus"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.card.MaterialCardView

            app:cardElevation="10dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/kamizShalwar"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/man"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:text="Kamiz Shalwar"
                    android:textSize="10dp"
                    android:fontFamily="@font/bauhaus"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView

            app:cardElevation="10dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/tShirt"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/man"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="T-Shirt"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:fontFamily="@font/bauhaus"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/dressSuit"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/man"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Suit"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:fontFamily="@font/bauhaus"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.card.MaterialCardView
            app:cardElevation="10dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/faraq"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/man"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Faraq"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:fontFamily="@font/bauhaus"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    </LinearLayout>

</ScrollView>