<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Tailor.fragments.TailorHomeFragment">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Craft Corner"
        android:textSize="50dp"
        android:textColor="@color/purple_500"
        android:gravity="center"
        android:fontFamily="@font/bauhaus"/>

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textColor="@color/purple_500"
                android:layout_height="wrap_content"
                android:text="Total Products Sell"
                android:fontFamily="@font/bauhaus"
                android:textSize="25dp"
                android:gravity="center"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/total_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="50dp"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/purple_500"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/purple_500"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/purple_500"
                        android:layout_height="wrap_content"
                        android:text="Orders Complete"
                        android:fontFamily="@font/bauhaus"
                        android:textSize="25dp"
                        android:gravity="center"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/complete_orders"
                        android:layout_marginTop="20dp"
                        android:textSize="50dp"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/purple_500"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/purple_500"
                        android:layout_height="wrap_content"
                        android:text="Orders    Pending"
                        android:textSize="25dp"
                        android:fontFamily="@font/bauhaus"
                        android:gravity="center"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pending_orders"
                        android:layout_marginTop="20dp"
                        android:textSize="50dp"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/purple_500"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/purple_500"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>