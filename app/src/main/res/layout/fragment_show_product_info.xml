<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ShowProductInfoFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_margin="10dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/product_image"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:scaleType="fitXY"
               android:src="@drawable/craftcorner"/>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="left"
                android:fontFamily="@font/bauhaus"
                android:text="Product Title"
                android:textSize="20dp"
                android:textColor="@color/purple_500" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/product_price"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="prices"
                android:gravity="left"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/product_status"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#37A805"
                android:text="status"
                android:gravity="left"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/product_rating"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Rating"
                android:gravity="right"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/product_order_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cornerRadius="20dp"
            app:elevation="10dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="order now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="TouchTargetSizeCheck" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/product_category"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#37A805"
            android:text="category"
            android:gravity="left"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:fontFamily="@font/bauhaus"
            android:text="Detail Description"
            android:textSize="20dp"
            android:textColor="@color/purple_500" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_shape"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:padding="25dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/contactToTailor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cornerRadius="20dp"
            app:elevation="10dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Contact to Tailor"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />


    </LinearLayout>


</ScrollView>